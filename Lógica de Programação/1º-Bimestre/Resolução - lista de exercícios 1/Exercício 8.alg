algoritmo "Exercício 8 - Lista de exercício 1"

var
   quilos,gramas:real
inicio
      // Entrada
      escreval("Este programa irá converter o peso de quilos para gramas.")
      escreval("Entre com o peso em quilos: ")
      leia(quilos)

      //Processamento

      gramas <- (quilos / 0.0010000)


      //Saída
      escreval("O peso em gramas é: ",gramas:4:0)


fimalgoritmo
